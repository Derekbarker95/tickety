

<h1> All Tickets </h1>

<table class="table table-striped table-hover">
 <tr>
    <th></th>
    <th>Title</th>
    <th>Email</th> 
    <th>Department</th>
    <th>Message</th>
    <th>Status</th>
    <th></th>
  </tr>
<% @ticket.each do |t| %>
<tr>
  <td></td>
  <td><p><%= link_to t.name, t %></p></td>
  <td><p><%=  mail_to t.email %></p></td>
  <td><p><%= t.department  %></p></td>
  <td><p><%= t.message %></p></td>
  <td>

  <% if t.status == false %>
    <button type="button" class="btn btn-info"><%= link_to "Not Done", toggle_support_path(t) %></button>
  <% else %>
    <button type="button" class="btn btn-success"><%= link_to "Done", toggle_support_path(t) %></button>
  <% end %></td>


 <td><button type="button" class="btn btn-warning"><%= link_to "Edit", edit_support_path(t) %></button>
  <button type="button" class="btn btn-danger"><%= link_to "Delete", support_path(t), method: :delete, data: {confirm:"Are you sure?"} %></button> </td>
  </tr>
  <% end %>
  </table>

